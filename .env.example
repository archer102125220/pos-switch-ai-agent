# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=pos_switch_ai_agent_next

# Next.js
NEXT_PUBLIC_APP_NAME="POS Switch AI Agent"
NEXT_PUBLIC_DEFAULT_LOCALE=zh-tw

# JWT Secrets (use different keys for access and refresh tokens)
JWT_ACCESS_SECRET=your-access-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars

# Token expiration (optional, defaults in code)
# JWT_ACCESS_EXPIRES_IN=900      # 15 minutes
# JWT_REFRESH_EXPIRES_IN=604800  # 7 days

# CORS Configuration
# Set to 'true' to enable cross-origin requests (for cross-domain deployments)
# Set to 'false' or omit for same-origin only (default, more secure)
ENABLE_CORS=false
# Comma-separated list of allowed origins (only used when ENABLE_CORS=true)
# Example: http://localhost:3001,https://app.example.com
CORS_ALLOWED_ORIGINS=
